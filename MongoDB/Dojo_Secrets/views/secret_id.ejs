<html>
        <head>
            <meta charset="UTF-8">
            <meta name = "viewport" content="width=device-width, initial-scale = 1.0">
            <meta http-equiv="X-UA-Compatible" content="ie=edge">
            <title>Secrets</title>
        </head>
        <body>
        Secret: <%= secret.secret %><br>
        <% if(secret.comments) {%>
            <% for (let comment of secret.comments) { %>
                <%= comment %><br>
            <% } %>
            <br>
        <% } %>

        <form action = "/secrets/add_comment" method = "post">
            <input type = "hidden" name = "ids" value = "<%= secret._id %>" >
            Add Comment:<input type = "text" name = "comment"><br>
            <input type = "submit" value = "add comment">
        </form>
        </body>
</html>