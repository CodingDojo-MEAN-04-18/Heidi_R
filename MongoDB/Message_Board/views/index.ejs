<html>
    <head>
        <title></title>
    </head>
    <body>

        <h1>The DojoMessage Board</h1><br>
        <hr>
        <form action = "/message" method = "post">
            <label>Name:</label><br>
            <input type = "text" name = "name"><br>
            <label>Message:</label><br>
            <input type = "text" name = "message"><br>
            <input type = "submit" value = "Post Message">
        </form>
        <% for (let message of messages) { %>
            Name: <%= message.name %><br>
            Message: <%= message.message; %><br>
            <% for (let comment of message._comments) { %>
                <h5><%= "name: " + comment.name %></h5>
                <h5><%="comment: " + comment.comment %></h5>
            <% } %>
            <form action = "/comment/<%= message._id %>" method = "post">
                <label for "">Name:</label><input type = "text" name = "name"><br>
                <label for "">comment:</label><input type = "text" name = "comment"><br>
                <input type = "submit" value = "Post Comment">
            </form>
        <% } %>
    </body>
</html>